<%- include ../layouts/header.ejs %>
<!-- BEGIN CONTAINER -->
<div class="page-container row-fluid">
<!-- BEGIN SIDEBAR -->
<%- include ../layouts/sidebar.ejs %>		
<!-- END SIDEBAR -->
<!-- BEGIN PAGE -->
  <div class="page-content">
         <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
         <div id="portlet-config" class="modal hide">
            <div class="modal-header">
               <button data-dismiss="modal" class="close" type="button"></button>
               <h3>portlet Settings</h3>
            </div>
            <div class="modal-body">
               <p>Here will be a configuration form</p>
            </div>
         </div>
         <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
         <!-- BEGIN PAGE CONTAINER-->
         <div class="container-fluid">
            <!-- BEGIN PAGE HEADER-->   
            <div class="row-fluid">
               <div class="span12">
                  <!-- BEGIN STYLE CUSTOMIZER -->
                  <div class="color-panel hidden-phone">
                     <div class="color-mode-icons icon-color"></div>
                     <div class="color-mode-icons icon-color-close"></div>
                     <div class="color-mode">
                        <p>THEME COLOR</p>
                        <ul class="inline">
                           <li class="color-black current color-default" data-style="default"></li>
                           <li class="color-blue" data-style="blue"></li>
                           <li class="color-brown" data-style="brown"></li>
                           <li class="color-purple" data-style="purple"></li>
                           <li class="color-white color-light" data-style="light"></li>
                        </ul>
                        <label class="hidden-phone">
                        <input type="checkbox" class="header" checked value="" />
                        <span class="color-mode-label">Fixed Header</span>
                        </label>                    
                     </div>
                  </div>
                  <!-- END BEGIN STYLE CUSTOMIZER -->   
                  <h3 class="page-title">
                     <%=info_one%>
                     <small><%=info_two%></small>
                  </h3>
                  <ul class="breadcrumb">
                     <li>
                        <i class="icon-home"></i>
                        <a href="#">Home</a> 
                        <span class="icon-angle-right"></span>
                     </li>
                     <li>
                        <a href="#"><%=info_three%></a>
                        <span class="icon-angle-right"></span>
                     </li>
                     <li><a href="#"><%=info_four%></a></li>
                  </ul>
               </div>
            </div>
			
			 <%- locals.flash %>
			
			
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row-fluid">
               <div class="span12">
                  <!-- BEGIN SAMPLE FORM PORTLET-->   
                  <div class="portlet box blue">
                     <div class="portlet-title">
                        <h4><i class="icon-reorder"></i><%=info_five%></h4>
                        <div class="tools">
                           <a href="javascript:;" class="collapse"></a>
                           <a href="#portlet-config" data-toggle="modal" class="config"></a>
                           <a href="javascript:;" class="reload"></a>
                           <a href="javascript:;" class="remove"></a>
                        </div>
                     </div>
                     <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form   method="post"   action="/admin/product/category/insert_product/" class="form-horizontal" enctype="multipart/form-data" >
                                                     
                          
	                    
                                
                           <div class="control-group">
                              <label class="control-label">Category Title</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Category Title." id="cat_name" name="cat_name"  />                       
                              </div>
                           </div>
                           
						     <div class="control-group">
                              <label class="control-label">Category Small Description</label>
                              <div class="controls">
                                 <textarea  class="span12 ckeditor m-wrap" data-trigger="hover" data-original-title="Category Small Description." id="cat_short_des" name="cat_short_des" ></textarea>
                                                      
                              </div>
                           </div>
                          
                           <div class="control-group">
                              <label class="control-label">Category Image Upload</label>
                              <div class="controls">
                                 <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                       <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                    </div>
                                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                    <div>
                                       <span class="btn btn-file"><span class="fileupload-new">Select image</span>
                                       <span class="fileupload-exists">Change</span>
                                       <input type="file" class="default" name="userPic" id="userPic" /></span>
                                       <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
                                    </div>
                                 </div>
                                 
                              </div>
                           </div>
                                
                                                                                 
                           <div class="form-actions">
                             
                             
                              
                              <button type="submit" class="btn blue">Submit</button>
                              <a  class="btn" href="/admin/product/category" >Cancel</a>
                           </div>
                        </form>
                        <!-- END FORM-->           
                     </div>
                  </div>
                  <!-- END SAMPLE FORM PORTLET-->
               </div>
            </div>
            
            
            
            
            
            
            
            
            <!-- END PAGE CONTENT-->         
         </div>
         <!-- END PAGE CONTAINER-->
      </div>
<!-- END PAGE -->
</div>
<!-- END CONTAINER -->
<%- include ../layouts/footer.ejs %>
