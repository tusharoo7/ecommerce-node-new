<%- include ../layouts/header.ejs %>
<!-- BEGIN CONTAINER -->
<div class="page-container row-fluid">
<!-- BEGIN SIDEBAR -->
<%- include ../layouts/sidebar.ejs %>		
<!-- END SIDEBAR -->
<!-- BEGIN PAGE -->
  <div class="page-content">
         <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
         <div id="portlet-config" class="modal hide">
            <div class="modal-header">
               <button data-dismiss="modal" class="close" type="button"></button>
               <h3>portlet Settings</h3>
            </div>
            <div class="modal-body">
               <p>Here will be a configuration form</p>
            </div>
         </div>
         <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
         <!-- BEGIN PAGE CONTAINER-->
         <div class="container-fluid">
            <!-- BEGIN PAGE HEADER-->   
            <div class="row-fluid">
               <div class="span12">
                  <!-- BEGIN STYLE CUSTOMIZER -->
                  <div class="color-panel hidden-phone">
                     <div class="color-mode-icons icon-color"></div>
                     <div class="color-mode-icons icon-color-close"></div>
                     <div class="color-mode">
                        <p>THEME COLOR</p>
                        <ul class="inline">
                           <li class="color-black current color-default" data-style="default"></li>
                           <li class="color-blue" data-style="blue"></li>
                           <li class="color-brown" data-style="brown"></li>
                           <li class="color-purple" data-style="purple"></li>
                           <li class="color-white color-light" data-style="light"></li>
                        </ul>
                        <label class="hidden-phone">
                        <input type="checkbox" class="header" checked value="" />
                        <span class="color-mode-label">Fixed Header</span>
                        </label>                    
                     </div>
                  </div>
                  <!-- END BEGIN STYLE CUSTOMIZER -->   
                  <h3 class="page-title">
                     <%=info_one%>
                     <small><%=info_two%></small>
                  </h3>
                  <ul class="breadcrumb">
                     <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Home</a> 
                        <span class="icon-angle-right"></span>
                     </li>
                     <li>
                        <a href="#"><%=info_three%></a>
                        <span class="icon-angle-right"></span>
                     </li>
                     <li><a href="#"><%=info_four%></a></li>
                  </ul>
               </div>
            </div>
			
			 <%- locals.flash %>
			
			
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row-fluid">
               <div class="span12">
                  <!-- BEGIN SAMPLE FORM PORTLET-->   
                  <div class="portlet box blue">
                     <div class="portlet-title">
                        <h4><i class="icon-reorder"></i><%=info_five%></h4>
                        <div class="tools">
                           <a href="javascript:;" class="collapse"></a>
                           <a href="#portlet-config" data-toggle="modal" class="config"></a>
                           <a href="javascript:;" class="reload"></a>
                           <a href="javascript:;" class="remove"></a>
                        </div>
                     </div>
                     <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form action="/admin/updateprofileinfo/" class="form-horizontal" method="post">
                                                     
                           <div class="control-group">
                              <label class="control-label">First Name</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="First Name." id="first_name" name="first_name" value="<%=data.first_name%>" />                       
                              </div>
                           </div>
                           
						     <div class="control-group">
                              <label class="control-label">Middle Name</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Middle Name." id="middle_name" name="middle_name" value="<%=data.middle_name%>" />                       
                              </div>
                           </div>
						   
						     <div class="control-group">
                              <label class="control-label">Last Name</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Last Name." id="last_name" name="last_name" value="<%=data.last_name%>" />                       
                              </div>
                           </div>
						   
						     <div class="control-group">
                              <label class="control-label">Email</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Email." name="email" id="email" value="<%=data.email%>" />                       
                              </div>
                           </div>
						   
						     <div class="control-group">
                              <label class="control-label">Contact</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Contact." name="contact" id="contact" value="<%=data.contact%>" />                       
                              </div>
                           </div>
						   
						   
						     <div class="control-group">
                              <label class="control-label">Facebook Link</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Facebook Link." name="fb_link" id="fb_link" value="<%=data.fb_link%>" />                       
                              </div>
                           </div>
                           
                           
                            
						    <div class="control-group">
                              <label class="control-label">Twitter Link</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Twitter Link." name="tw_link" id="tw_link" value="<%=data.tw_link%>" />                       
                              </div>
                           </div>
						   
						    <div class="control-group">
                              <label class="control-label">Paypal Link</label>
                              <div class="controls">
                                 <input type="text" class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Paypal Link." name="paypal_id" id="paypal_id" value="<%=data.paypal_id%>" />                       
                              </div>
                           </div>
						   
						    <div class="control-group">
                              <label class="control-label">Eamil Signature</label>
                              <div class="controls">
							  <textarea class="span6 m-wrap tooltips" data-trigger="hover" data-original-title="Eamil Signature." name="email_signature" id="email_signature"><%=data.email_signature%></textarea>
                                                       
                              </div>
                           </div>
                           
                                                                                 
                           <div class="form-actions">
                              <button type="submit" class="btn blue">Submit</button>
                              <button type="button" class="btn">Cancel</button>
                           </div>
                        </form>
                        <!-- END FORM-->           
                     </div>
                  </div>
                  <!-- END SAMPLE FORM PORTLET-->
               </div>
            </div>
            
            
            
            
            
            
            
            
            <!-- END PAGE CONTENT-->         
         </div>
         <!-- END PAGE CONTAINER-->
      </div>
<!-- END PAGE -->
</div>
<!-- END CONTAINER -->
<%- include ../layouts/footer.ejs %>